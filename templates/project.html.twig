<span class="project-carousel-close" onclick="modalClose()">X</span>
<div class="cdn"></div>
<div id="carouselExampleControls" class="carousel slide project-carousel" data-ride="carousel">
    <div class="carousel-inner w-100 h-100">

        {% for picture in project.picture %}
            {% if loop.first %}
                <div class="carousel-item active w-100 h-100 ">
            {% else %}
                <div class="carousel-item w-100 h-100 ">
            {% endif %}

                <img class="d-block h-100 w-auto mx-auto img-fluid" src="{{ asset('assets/img') }}/{{ picture.name }}"
                     alt="image du projet {{ project.title }}">
            </div>
        {% endfor %}

    </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon project-control" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon project-control" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
    <div class="project-description">
        <p>{{ project.description }}</p>
    </div>
</div>
