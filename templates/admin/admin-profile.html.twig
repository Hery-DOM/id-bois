{% extends 'bases/bases-admin.html.twig' %}

{% block content %}
    <div class="container-fluid">
        <div class="container  d-flex justify-content-around flex-column admin-container">
            {{ form_start(form) }}

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.picture,'Photo de profil',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-2">
                    <img src="#" alt="" class="img-fluid">
                </div>
                <div class="col-6">
                    {{ form_widget(form.picture,{'attr':{'class':'admin-input'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.username,'Nom d\'utilisateur',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-8">
                    {{ form_widget(form.username,{'attr':{'class':'admin-input'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.first_name,'Prénom',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-8">
                    {{ form_widget(form.first_name,{'attr':{'class':'admin-input'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.last_name,'Nom de famille',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-8">
                    {{ form_widget(form.last_name,{'attr':{'class':'admin-input'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.email,'Email',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-8">
                    {{ form_widget(form.email,{'attr':{'class':'admin-input'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.phone,'Numéro de téléphone',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-8">
                    {{ form_widget(form.phone,{'attr':{'class':'admin-input'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-4">
                    {{ form_label(form.description,'Description',{'label_attr':{'class':'admin-label'}}) }}
                </div>
                <div class="col-8">
                    {{ form_widget(form.description,{'attr':{'class':'admin-textarea'}}) }}
                </div>
            </div>

            <div class="row align-items-center">
                <div class="col-12">
                    <input type="submit" value="Modifier" type="button" class="btn btn-success">
                </div>
            </div>

            {{ form_end(form) }}
            <a href="{{ path('fos_user_change_password') }}"  class="back">Changer de mot de passe</a>

        </div>


    </div>

{% endblock %}